{
	"name": "svelte-extension-template",
	"version": "1.0.0",
	"description": "Browser extension template using Svelte",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"watch": "vite build --watch",
		"lint": "biome check .",
		"format": "biome format . --write",
		"test": "vitest run",
		"test:watch": "vitest",
		"start": "node scripts/watch.js",
		"dev:chrome": "node scripts/dev-browser.js chrome",
		"dev:firefox": "node scripts/dev-browser.js firefox"
	},
	"keywords": ["svelte", "browser-extension", "chrome-extension", "firefox-extension", "vite"],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tsconfig/svelte": "^5.0.4",
		"@types/node": "^22.15.14",
		"@types/webextension-polyfill": "^0.12.3",
		"svelte": "^5.28.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.1.3",
		"web-ext": "^8.6.0",
		"webextension-polyfill": "^0.12.0"
	}
}
