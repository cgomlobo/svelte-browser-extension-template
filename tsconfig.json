{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["svelte", "node"]
	},
	"include": ["src/**/*.ts", "src/**/*.svelte", "vite.config.ts"]
}
